<template name="73f8cd6e">
  <view class="_view data-v-115cc828 content">
    <view class="_view data-v-115cc828">
      <text class="_text data-v-115cc828 title">{{title}}</text>
      <view class="_view data-v-115cc828">
        <view class="_view data-v-115cc828">{{interactText}}</view>
      </view>
      <view class="_view data-v-115cc828"></view>
      <view class="_view data-v-115cc828">游戏状态
        <view class="_view data-v-115cc828">能量:{{energy}}</view>
        <view class="_view data-v-115cc828">回合:{{rounds}}</view>
        <view wx:for="{{playerList}}" wx:for-index="index" wx:for-item="player" class="_view data-v-115cc828"> 玩家{{player.name}}金钱:{{player.money}} </view>
      </view>
      <button bindtap="handleProxy" data-eventid="{{'Zxy-0'}}" data-comkey="{{$k}}" class="_button data-v-115cc828">赚取金钱</button>
      <button bindtap="handleProxy" data-eventid="{{'AFS-1'}}" data-comkey="{{$k}}" class="_button data-v-115cc828">产生能量</button>
      <button bindtap="handleProxy" data-eventid="{{'EvR-2'}}" data-comkey="{{$k}}" class="_button data-v-115cc828">重新开始游戏</button>
      <view class="_view data-v-115cc828">游戏设置
        <view class="_view data-v-115cc828">能量总数
          <input type="number" value="{{energySet}}" bindinput="handleProxy" data-eventid="{{'13K-3'}}" data-comkey="{{$k}}" class="_input data-v-115cc828" />
        </view>
        <view class="_view data-v-115cc828">回合数
          <input type="number" value="{{roundsSet}}" bindinput="handleProxy" data-eventid="{{'eIu-4'}}" data-comkey="{{$k}}" class="_input data-v-115cc828" />
        </view>
        <view class="_view data-v-115cc828">玩家数
          <input type="number" value="{{playerNumSet}}" bindinput="handleProxy" data-eventid="{{'qk8-5'}}" data-comkey="{{$k}}" class="_input data-v-115cc828" />
        </view>
      </view>
    </view>
  </view>
</template>